# Deny access to .env and other sensitive files starting with a dot
<FilesMatch "^\.(env|git|idea|vscode|DS_Store)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Also block manual access to composer files
<FilesMatch "^(composer\.json|composer\.lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Optional: Disable directory listing (index of /)
Options -Indexes
